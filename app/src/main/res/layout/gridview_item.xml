<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220px"
    android:layout_height="165px"
    android:orientation="vertical"
    android:paddingBottom="5px"
    android:paddingLeft="5px"
    android:paddingRight="5px"
    android:paddingTop="5px" >

    <LinearLayout
        android:layout_width="200px"
        android:layout_height="120px"
        android:background="@drawable/shape_corner"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="200px"
            android:layout_height="30px"
            android:layout_marginTop="5px"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="35px"
                android:layout_height="25px"
                android:layout_marginLeft="10px"
                android:contentDescription="@string/logo"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/card_title"
                android:layout_width="145px"
                android:layout_height="25px"
                android:layout_marginRight="5px"
                android:gravity="center_vertical|right"
                android:text="储值卡"
                android:textColor="@drawable/white"
                android:textSize="20px"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200px"
            android:layout_height="70px"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/listPrice"
                android:layout_width="200px"
                android:layout_height="70px"
                android:gravity="center_vertical|center_horizontal"
                android:text="200"
                android:textColor="@drawable/white"
                android:textSize="40px"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="200px"
        android:layout_height="30px"
        android:layout_marginTop="5px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/freshPriceTitle"
            android:layout_width="70px"
            android:layout_height="30px"
            android:text="首单立减"
            android:textColor="@drawable/yellow"
            android:textSize="15px"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/freshPrice"
            android:layout_width="40px"
            android:layout_height="30px"
            android:text="168"
            android:textColor="@drawable/yellow"
            android:textSize="15px"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/vipPriceTitle"
            android:layout_width="60px"
            android:layout_height="30px"
            android:text="会员价"
            android:textColor="@drawable/white"
            android:textSize="15px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vipPrice"
            android:layout_width="50px"
            android:layout_height="30px"
            android:text="188"
            android:textColor="@drawable/white"
            android:textSize="15px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TextView>
    </LinearLayout>

</LinearLayout>