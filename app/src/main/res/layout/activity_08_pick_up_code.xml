<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="854px"
    android:layout_height="480px"
    android:background="@drawable/logo2"
    android:orientation="vertical"
    tools:context=".Activity_02_Welcome" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="854px"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="60px"
            android:layout_height="30px"
            android:layout_marginLeft="25px"
            android:layout_marginTop="10px"
            android:contentDescription="@string/logo"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/terminal_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="550px"
            android:text="@string/test_terminal_id"
            android:textColor="@color/white"
            android:textSize="18px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="90px"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/message_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/title_pickupcode"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@drawable/white"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/pickup_code"
                    android:layout_width="300px"
                    android:layout_height="54px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30px"
                    android:background="@drawable/pickupcode_sharp"
                    android:digits="0123456789"
                    android:ems="6"
                    android:enabled="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="请输入取货码"
                    android:inputType="textPassword"
                    android:maxEms="6"
                    android:textSize="25px" />
            </LinearLayout>

            <TextView
                android:id="@+id/codeCheckMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190px"
                android:layout_marginTop="30px"
                android:text="提示信息：请输入6位数字提货码"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@drawable/yellow"
                android:textSize="22px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54px"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="83px"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/button_pickup_ok"
                    android:layout_width="141px"
                    android:layout_height="56px"
                    android:layout_marginLeft="54px"
                    android:background="@drawable/button_pickup_ok_selector" />

                <ImageView
                    android:id="@+id/button_pickup_cancel"
                    android:layout_width="141px"
                    android:layout_height="56px"
                    android:layout_marginLeft="90px"
                    android:background="@drawable/button_pickup_cancel_selector" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:columnCount="3"
                android:rowCount="4" >

                <ImageView
                    android:id="@+id/input_no7"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:background="@drawable/num_7_selector" />

                <ImageView
                    android:id="@+id/input_no8"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_marginLeft="29px"
                    android:background="@drawable/num_8_selector" />

                <ImageView
                    android:id="@+id/input_no9"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_marginLeft="29px"
                    android:background="@drawable/num_9_selector" />

                <ImageView
                    android:id="@+id/input_no4"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_marginTop="19px"
                    android:background="@drawable/num_4_selector" />

                <ImageView
                    android:id="@+id/input_no5"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_marginLeft="29px"
                    android:layout_marginTop="19px"
                    android:background="@drawable/num_5_selector" />

                <ImageView
                    android:id="@+id/input_no6"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_marginLeft="29px"
                    android:layout_marginTop="19px"
                    android:background="@drawable/num_6_selector" />

                <ImageView
                    android:id="@+id/input_no1"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_marginTop="19px"
                    android:background="@drawable/num_1_selector" />

                <ImageView
                    android:id="@+id/input_no2"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_marginLeft="29px"
                    android:layout_marginTop="19px"
                    android:background="@drawable/num_2_selector" />

                <ImageView
                    android:id="@+id/input_no3"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_marginLeft="29px"
                    android:layout_marginTop="19px"
                    android:background="@drawable/num_3_selector" />

                <ImageView
                    android:id="@+id/input_no0"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_marginTop="19px"
                    android:background="@drawable/num_0_selector" />

                <ImageView
                    android:id="@+id/input_clear"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_marginLeft="29px"
                    android:layout_marginTop="19px"
                    android:background="@drawable/clear_selector" />

                <ImageView
                    android:id="@+id/input_delete"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_marginLeft="29px"
                    android:layout_marginTop="19px"
                    android:background="@drawable/delete_selector" />
            </GridLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>