<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/father"
    android:layout_width="854px"
    android:layout_height="match_parent"
    android:background="@drawable/bk_background"
    android:orientation="vertical"
    tools:context=".Activity_10_vipcard" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="854px"
        android:layout_height="40px"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="60px"
            android:layout_height="30px"
            android:layout_marginLeft="25px"
            android:layout_marginTop="10px"
            android:contentDescription="@string/logo"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/terminal_code"
            android:layout_width="wrap_content"
            android:layout_height="30px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="550px"
            android:layout_marginTop="10px"
            android:text="@string/test_terminal_id"
            android:textColor="@color/white"
            android:textSize="16px" />
    </LinearLayout>

    <GridView
         android:gravity="center_horizontal"
        android:id="@+id/gridview"
        android:layout_width="wrap_content"
        android:layout_height="350px"
        android:numColumns="auto_fit" />

    <LinearLayout
        android:id="@+id/layout_cancel_trade_for_card"
        android:layout_width="854px"
        android:layout_height="70px"
         android:layout_marginTop="20px"
        android:background="@drawable/white"
        android:gravity="center|bottom"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/button_cancel_trade_for_card"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginBottom="5px"
            android:layout_marginTop="5px"
            android:background="@drawable/back"
            android:scaleType="fitCenter" />
    </LinearLayout>

</LinearLayout>